{{#if success}}
  <div class="container p-4">
    <div class="row">
      <div class="col-md-4 mx-auto">
        <div
          class="alert alert-success alert-dismissable fade show"
          role="alert"
        >
          {{success}}
          <button
            type="button"
            class="btn-close pull-right"
            data-bs-dismiss="alert"
            aria-label="Close"
          >
          </button>
        </div>
      </div>
    </div>
  </div>
{{/if}}